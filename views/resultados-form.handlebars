{{>menu}}

<div class="container mb-4">

  <p>Ingresar resultados de la Carrera</p>

  <form action="/registrar-resultado" method="post" > 
    
    <div class="py-2">
      <p>Seleccione la carrera</p>
    </div>
    <select class="mb-2 border-stone-400 border-2" name="circuito" id="circuito">
      {{#each carreras}}
          <option value="{{this.id}}" >{{this.circuito}}</option>
      {{/each }}
    </select>

    {{#each pilotos}}
    <div class="flex border-stone-800 border-t-2 m-y-4 py-2">      
      <div class="flex flex-col mr-1">
        <label for="" class="text-xs">piloto</label>
        <input class="mb-2 border-stone-400 border-2" readonly type="text" name="piloto" value="{{this.piloto}}">
      </div>
      <div class="flex flex-col mr-1">
        <label for="" class="text-xs">Escuderia</label>
        <input class="mb-2 border-stone-400 border-2" readonly type="text" name="escuderia" value="{{this.escuderia}}">
      </div>
      <div class="flex flex-col mr-1">
        <label for="" class="text-xs">Minutos en carrera</label>
        <input class="mb-2 border-stone-400 border-2" type="number" name="minutos" placeholder="Minutos totales">
      </div>
      <div class="flex flex-col mr-1">
        <label for="" class="text-xs">Puesto</label>
        <input class="mb-2 border-stone-400 border-2" type="number" name="lugar" placeholder="Puesto">
      </div>
      
      <div class="flex flex-col mr-1">
        <label for="" class="text-xs">Abandono</label>
        <select class="mb-2 border-stone-400 border-2" name="abandono" id="abandono">
          <option value="NO" selected>No</option>
          <option value="problemas tecnicos">Problemas TÃ©cnicos</option>
          <option value="problemas personales">Problemas Personales</option>
        </select>
      </div>

    </div>
    {{/each }}

    <input class="bg-blue-700 text-white p-2 min-w-40 rounded-2xl" type="submit" value="Enviar">
  </form> 

</div>